                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/store_image_placeholder"
                    android:contentDescription="사진"
                    android:padding="8dp"
                    android:background="@drawable/store_image_background" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="32dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/store_item_background">

                <TextView
                    android:id="@+id/storeInfoTextView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="가게 정보 요약 표시"
                    android:gravity="center"
