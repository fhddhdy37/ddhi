                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/store_image_placeholder"
                    android:contentDescription="사진"
                    android:padding="8dp"
                    android:background="@drawable/store_image_background" />
            </LinearLayout>




            <!-- Repeat this block to add more items as needed -->

        </LinearLayout>
